<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.NoiseTrackerApp"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="17" />
	
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:allowBackup="true">
        
    	<service android:name="il.ac.tau.eng.NoiseTracker.NoiseTrackerService" android:label="@string/service_name" />
        
        <activity android:name="il.ac.tau.eng.NoiseTracker.NoiseTrackerActivity" android:label="@string/activity_name">
        	<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter> 
        </activity>
        
        <receiver android:name="il.ac.tau.eng.NoiseTracker.OnBootBroadcastReceiver">
			<intent-filter>  
        		<action android:name="android.intent.action.BOOT_COMPLETED" />  
    		</intent-filter>  
		</receiver>
        
    </application>
</manifest>